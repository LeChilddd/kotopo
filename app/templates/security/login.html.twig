{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section>

    <div class="page-header">
        <div class="container">
                <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                    <div class="card card-plain text-center">
                            <h4 class="font-weight-bolder">Connexion</h4>
                        <div class="card-body">
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                <div class="mb-3 text-start">
                                    <label for="inputEmail">Adresse e-mail</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                           autocomplete="email" required autofocus
                                           class="form-control form-control-lg" placeholder="Email"
                                           aria-label="Email"/>
                                </div>
                                <div class="mb-3 text-start">
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" name="password" id="inputPassword"
                                           autocomplete="current-password" required
                                           class="form-control form-control-lg" placeholder="Mot de passe"
                                           aria-label="Password"/>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="rememberMe"
                                               name="_remember_me" checked="checked" />
                                        <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                                    </div>
                                    <p class="mb-0 text-sm mx-auto ">
                                        <a href="#" class="font-weight-bold color-cta" id="forgottenPasswordBtn" data-token="{{ csrf_token('forgotten-password') }}">
                                            Mot de passe oubli√© ?
                                        </a>
                                    </p>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg btn-lg w-100 mt-4 mb-0 btn-cta">
                                        Connexion
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-4 text-sm mx-auto">
                                <a href="{{ path('app_register') }}" class="font-weight-bold" id="forgottenPasswordBtn" data-token="{{ csrf_token('forgotten-password') }}">
                                    S'inscrire
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
{% endblock %}
